{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "src",
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "esnext.asynciterable", 
      "es2017.object"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/*.ts",
    "src/**/__mocks__/*.ts",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.ts",
  ],
  "compileOnSave": true
}