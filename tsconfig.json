{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "src",
    "rootDir": "src",
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "esnext.asynciterable", 
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true
}