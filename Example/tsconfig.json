{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react-native",
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "es6"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "**/*.test.{ts,tsx}",
    "src/**/__tests__/*.ts",
    "src/**/__mocks__/*.ts",
    "node_modules",
    "**/node_modules/*",
    "android",
    "ios",
    "lib",
  ],
  "compileOnSave": true
}